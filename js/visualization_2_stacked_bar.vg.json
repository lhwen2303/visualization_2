{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Line chart by gender with annotation",
  "width": 650,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/lhwen2303/visualization_2/main/population_malaysia_gender_2010-2025.csv",
    "format": { "type": "csv" }
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "point": true
      },
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal",
          "title": "Year",
          "scale": {
            "paddingOuter": 0.3
          }
        },
        "y": {
          "field": "population",
          "type": "quantitative",
          "title": "Population ('000)"
        },
        "color": {
          "field": "sex",
          "type": "nominal",
          "title": "Gender",
          "scale": {
            "domain": ["male", "female"],
            "range": ["#88ACE0", "#F47174"]
          }
        },
        "tooltip": [
          { "field": "year", "type": "ordinal", "title": "Year"},
          { "field": "sex", "type": "nominal", "title": "Gender"},
          { "field": "population", "type": "quantitative", "title": "Population ('000)"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "fontSize": 14,
        "color": "black",
        "dy": -20 
      },
    
      "encoding": {
        "x": {
          "value": 325
        },
        "y": {
          "value": 100 
        },
        "text": { 
          "value": [
            "Male population is slightly", 
            "higher compared to female",
            "population over the years"
          ] 
        }
      }
    }
  ]
}