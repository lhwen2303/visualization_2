{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "State Populations Relative to National Population (2010-2025)",
  "width": 1150,
  "height": 375,
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    {
      "data": {
        "url": "ne_10m_graticules_5.json",
        "format": {
          "type": "topojson",
          "feature": "graticule"
        }
      },
      "mark": {
        "type": "geoshape",  
        "stroke": "#black",  
        "strokeWidth": 0.75
      }
    },
    {
      "data": {
        "url": "ne_10m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "filter": "datum.properties.admin === 'Malaysia'"
        },
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/lhwen2303/FIT3179_Homework_Week9/main/population_overall_2010_2025.csv"
            },
            "key": "State",
            "fields": ["normalized population", "population"]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#000000",  
        "strokeWidth": 0.4
      },
      "encoding": {
        "color": {
          "field": "normalized population",
          "type": "quantitative",
          "scale": {
            "range": ["#add8e6", "#00008b"]
          },
          "legend": {
            "title": "Population of State/National",
            "orient": "bottom-right",  
            "padding": 0,           
            "columnPadding": 15,
            "gradientLength": 150
          }
        },
        "tooltip": [
          {
            "field": "properties.name",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "population",
            "type": "quantitative",
            "title": "Population"
          },
          {
            "field": "normalized population",
            "type": "quantitative",
            "title": "Population of State/National"
          }
        ]
      }
    }
  ]
}
