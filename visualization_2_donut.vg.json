{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Donut chart of Malaysia population by ethnicity with year dropdown filter",
  "data": {
    "url": "https://raw.githubusercontent.com/lhwen2303/visualization_2/main/population_malaysia_ethnicity_2010-2025.csv",
    "format": { "type": "csv" }
  },
  "params": [
    {
      "name": "yearSelect",
      "value": 2010,
      "bind": {
        "input": "select",
        "options": [2010, 2011, 2012, 2013, 2014, 2015, 2016, 2017, 2018, 2019, 2020, 2021, 2022, 2023, 2024, 2025],
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": 
        "datum.year == yearSelect"
    }
  ],
  "mark": {
    "type": "arc",
    "innerRadius": 75
  },
  "encoding": {
    "theta": {
      "field": "population",
      "type": "quantitative"
    },
    "color": {
      "field": "ethnicity",
      "type": "nominal",
      "legend": { "title": "Ethnicity" }
    },
    "tooltip": [
      { "field": "ethnicity", "type": "nominal", "title": "Ethnicity" },
      { "field": "population", "type": "quantitative", "title": "Population" }
    ]
  }
}
